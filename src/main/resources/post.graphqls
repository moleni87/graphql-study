# 설명
type Post {
    id: ID!
    title: String!
    category: String
    author: Author!
}


# ㅎㅎ
type Author {
    id: ID!
    name: String!
    thumbnail: String
    posts: [Post]!
}

# 쿼리
type Query {
    posts: [Post]!
    authors: [Author]!
}

