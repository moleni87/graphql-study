schema{
    query: Query
    mutation: Mutation
}

# 설명
type Post {
    id: ID!
    title: String!
    category: String
    author: Author!
}


# ㅎㅎ
type Author {
    id: ID!
    name: String!
    thumbnail: String
    posts: [Post]!
}

# 쿼리
type Query {
    posts: [Post]!
    authors: [Author]!
}


input CreateAuthor {
    name : String!
    thumbnail: String
}

# The Root Mutation for the application
type Mutation {
    createAuthor(input: CreateAuthor!) : Author!
}
